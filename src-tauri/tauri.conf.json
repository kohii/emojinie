{
  "build": {
    "beforeDevCommand": "RUST_LOG=trace pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Emojinie",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      },
      "http": {
        "request": true,
        "scope": [
          "https://api.openai.com/*"
        ]
      },
      "path": {
        "all": true
      }
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "category": "Utilities",
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "tokyo.kohii.Emojinie",
      "targets": "all",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "resources/**"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/kohii/emojinie/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNFNDQ3RkIzNkFBMkVFNkMKUldSczdxSnFzMzlFUHQrL3NjY0RlNGVjYWFvOGttZFlaOXgrZzZ2dFFOTXJXcnhMbFZkTFl2Q1oK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "title": "",
        "width": 560,
        "titleBarStyle": "Transparent",
        "transparent": true,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png"
    }
  }
}