{
  "build": {
    "beforeDevCommand": "RUST_LOG=trace pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "EmoGenius",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true,
        "execute": true,
        "scope": [
          {
            "name": "macos-copy",
            "cmd": "osascript",
            "args": [
              "-e",
              "tell application \"System Events\" to keystroke \"c\" using command down"
            ]
          }
        ]
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "tokyo.kohii.EmoGenius",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "EmoGenius",
        "width": 480,
        "height": 360,
        "titleBarStyle": "Transparent",
        "transparent": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png"
    }
  }
}